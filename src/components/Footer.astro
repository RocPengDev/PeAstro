---
const today = new Date();
import { SITE_COPYRIGHT } from '../consts';
---

<footer>
	<div class="footer-container">
		<div class="footer-content">
			<div class="footer-main">
				<p class="copyright">
					&copy; {today.getFullYear()} {SITE_COPYRIGHT}. All rights reserved. Powered by <a href="https://github.com/RocPengDev/PeAstro" target="_blank" rel="noopener noreferrer">PeAstro</a>.
				</p>
			</div>
		</div>
	</div>
</footer>

<style>
	footer {
		border-top: 1px solid var(--border-light);
		margin-top: 4rem;
	}

	.footer-container {
		max-width: var(--max-width);
		margin: 0 auto;
		padding: 3rem 1rem 1rem;
	}

	.footer-content {
		margin-bottom: 2rem;
	}

	.footer-main {
		text-align: center;
	}

	.copyright {
		color: var(--secondary-text);
		margin-bottom: 0.5rem;
	}

	@media (max-width: 768px) {
		.footer-container {
			padding: 2rem 1rem 1rem;
		}
	}
</style>
